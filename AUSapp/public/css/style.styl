body
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

#container
  width 486px

.welcome
  width 486px

.innerContainer
  width 385px
  height 325px

#gameCanvas
  float left
  border-width 1px
  border-style solid

#user-list
  list-style none
  display inline-block
  padding 0
  li
    color red
  li.self
    color blue

.chatContainer
  display block
  position relative
  float right
  height 100px
  width 0px

#chatWindow
  display block
  height 278px
  width 100px
  padding 0 5px 0 5px
  background-color #F8F8F8
  overflow-y scroll
  word-wrap break-word

.chatTime
  font-size 75%
  color #707070

.red
  color red

.blue
  color blue

#msg-date
  color grey
  font-size 25%

#msg-name
  font-weight bold

.chat-msg
  font-size 50%

.avatar
  height 25px
  width 25px

